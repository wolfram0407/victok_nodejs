{
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": [
      "prettier",
      "plugin:prettier/recommended",
      "plugin:import/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": ["warn", { "endOfLine": "auto" }],
      "semi": ["warn", "always"],
      // "indent": ["warn", 2],
      "no-trailing-spaces": 0,
      "keyword-spacing": 0,
      "no-unused-vars": 1,
      "no-undef": "error",
      "no-multiple-empty-lines": 0,
      "space-before-function-paren": 0,
      "eol-last": 0
    }
  }